<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="etudiant_doctorant_form" model="ir.ui.view">
        <field name="name">etudiant.doctorant.form</field>
        <field name="model">etudiant</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <form string="Etudiant" version="7.0">  
            <group col="4">     
            <field name="matricule"/>
            <field name="nom"/>  
            <field name="prenom"/>
            <field name="dateN"/>
            </group>
          </form>
        </field>
    </record>
 
    <record id="etudiant_doctorant_tree" model="ir.ui.view">
      <field name="name">etudiant.doctorant.tree</field>
      <field name="model">etudiant</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Etudiant">
            <field name="matricule"/>
            <field name="nom"/>  
            <field name="prenom"/>
            <field name="dateN"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="etudiant_doctorant_search">
      <field name="name">etudiant.doctorant.search</field>
      <field name="model">etudiant</field>
      <field name="arch" type="xml">
        <search string="rechercher des Ã©tudiants">
          <field name="matricule" />
      <!--    <filter name="filter_see_all" string="All" domain="['|', ('active', '=',True), ('active', '=',False)]" />
          <filter name="filter_see_active" string="Active" domain="[('active', '=',True)]" />
          <filter name="filter_see_inactive" string="Inactive" domain="[('active', '=',False)]" /> -->
       </search>
      </field>
    </record>

    <!-- L'action du menu -->
    <record model="ir.actions.act_window" id="action_etudiant">
      <field name="name">etudiant</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">etudiant</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="etudiant_doctorant_tree"/>
 <!--     <field name="context">{"search_default_filter_see_all":1}</field> -->
    </record>
  
    <menuitem 
              name="Etudiants/Etudiants" 
              id="rebrique_etudiant_doctorant" 
              />
    <menuitem
            name="Etudiants"
            id="menu_etudiant"
            parent="rebrique_etudiant_doctorant"
            action="action_etudiant"    
            />
    
  </data>
</openerp>